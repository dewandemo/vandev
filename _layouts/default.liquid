<script type="text/javascript">
//over = new Overcast({min: 1, fuzz: 4, overlay: "/images/gloss.png"});
$$('#header ul li a').each(function(el) {
  var bounce = new Fx.Tween(el, {duration:700, transition: Fx.Transitions.Elastic.easeOut});
  var colors = new Fx.Morph(el, {wait:false});
  
  el.addEvent('mouseenter', function(){
	el.setStyle('background-color', '#d5e88f');
	bounce.start('top', 15,0);
  	colors.start({
		color: '#35342e'
  	});
  });
  el.addEvent('mouseleave', function(){
  	colors.start({
		'background-color': '#35342e',
		color: '#d5e88f'
  	});
  });
});
$$('div#flickr img').each(function(e){
  var fade = new Fx.Tween(e, {wait:false});
  fade.set( 'opacity', .5);
  e.addEvent('mouseover', function(){
	fade.start( 'opacity', 1);
  });
  e.addEvent('mouseout', function(){
  	fade.start( 'opacity', .5);
  });
});
new SmoothScroll({duration:700, links: '.smooth', transition:Fx.Transitions.Circ.easeOut});
