<script type="text/javascript" charset="utf-8">
/* <![CDATA[ */
  var slideEffect = new Fx.Tween('sidenav', {wait:false, duration:600, transition:Fx.Transitions.Circ.easeOut});
  window.addEvent('load', function() {
    var top = $('sidenav').getPosition().y - 10;
    window.addEvent('scroll', function(){
      slideEffect.start.delay(500, slideEffect, [ 'margin-top', Math.max(0, document.documentElement.scrollTop - top)]);
    });
  });
/* ]]> */
</script>
