        <h3 id="flick">What the Flick</h3>
        <script type="text/javascript" charset="utf-8">
        /* <![CDATA[ */
          function jsonFlickrFeed(json) {
            for(var i = 0; i < 6; i++) {
              var item = json['items'].getRandom()
              new Element('div', {'class':'square'}).grab(
                new Element('a', {href:'#'}).grab(
                  new Element('img', {
                    src:item['media']['m'].replace(/_m\./,'_s.'), 
                    alt:item['title']
                  })
                )
              ).inject('flick', 'after')
            }
          }
        /* ]]> */
        </script>
